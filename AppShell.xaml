<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ShinyApp.Views"
       x:Class="ShinyApp.AppShell">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>


        <Tab Title="Tools" Icon="toolbox_icon.png">
            <ShellContent Route="ToolPage" ContentTemplate="{DataTemplate views:ToolPage}" />
        </Tab>

        <Tab Title="Settings" Icon="settings_icon.png">
            <ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>